{% extends 'base.html.twig' %}

{% block title %}Starting page{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .input {
            max-width: 800px;
            width: 55%;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .red {
            color: red
        }

        .blue {
            color: blue
        }
    </style>
    <div class="example-wrapper">
        <h1>Starting page</h1>
        <b>Here you may encode and decode your URL</b>
        <br>
        <form action="{{ path('proxy_page') }}" method="POST">
            <label>
                <input class="input" type="url" placeholder="Enter your URL" name="url" required />
            </label>
            <br/>
            <button type="submit">CONVERT URL</button>
        </form>
    </div>
{% endblock %}
