{% extends 'base.html.twig' %}

{% block title %}Starting page{% endblock %}

{% block body %}
    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .input {
            max-width: 800px;
            width: 55%;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .red {
            color: red
        }

        .blue {
            color: blue
        }
    p{
        margin-top: 0;
    }
    </style>
    <div class="example-wrapper">
        <h1><b>Hello here</b></h1>
        <span style='font-size:60px;'>&#128521;</span>
        <br>
        <b>Here you may encode, decode or REDIRECT with your URL</b>
        <br>
        <form action="{{ path('helper_page') }}" method="POST">
            <div>
                <h3>Choose your option:</h3>
                <input type="radio" name="option" checked value="code">
                <p>code</p>
                <input type="radio" name="option" value="decode">
                <p>decode</p>
                <input type="radio" name="option" value="redirect">
                <p>redirect</p>
            </div>
            <label>
                <input class="input" type="url" placeholder="Enter your Short or Long URL in format http(s)://..."
                       name="url" required/>
            </label>
            <br/>
            <button type="submit" style="color: red">PROCESS URL</button>
        </form>
    </div>
{% endblock %}
